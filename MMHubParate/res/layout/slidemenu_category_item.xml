<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/slidemenu_category_item_ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <net.myanmarhub.widget.MMTextView
        android:id="@+id/slidemenu_category_item_lblName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/slidemenu_category_item_ivIcon"
        android:text="Large Text"
        android:textColor="@color/slideme_color"
        android:padding="5dip"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>